<!-- throw an error if any API call fails, also do not render form -->
<% if @apistatus == "ERROR" %>
  <div class="alert alert-danger fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4>API Call Failure</h4>
    <p>Please contact the Webrockit API administrator. Once resolved, please reload the page.</p>
    <p>
      <a href="<%= request.url %>" ><button type="button" class="btn btn-danger">Reload</button></a>
    </p>
  </div>
<% else %>
  <!-- form validation fields -->
  <script>
    $(function () { $("input,select").not("[type=submit]").jqBootstrapValidation(); } );
  </script>

  <!-- start our form for creating types -->
  <form class="form-horizontal" role="form" method="post" action="/pollers">
    <div class="form-group">
    <div class="form-group">
      <label for="poller" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-3">
        <input class="form-control" id="poller" name="poller" required>
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-6">
        <input class="form-control" id="description" name="description" required>
      </div>
    </div>
    <%= token_tag %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </form>
<% end %>