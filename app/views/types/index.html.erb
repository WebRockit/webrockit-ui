<div class="row">
  <div class="col-md-6">
    <h3>Manage</h3>
    <table class="table table-condensed">
      <tr><th>Type</th><th>Description</th><th>Actions</th></tr>
      <% @check_types.each do |type| %>
        <tr>
          <td><%= type %></td>
          <td><%= JSON.parse(Type.fetch({:type => type}))['data']['description'] %></td>
          <td>
              <form method="post" action="/types/<%= type %>">
                <%= token_tag %>
                <input type="hidden" name="type" value="<%= type %>">
                <input type="hidden" value="delete" name="_method">
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i> Delete</button>
              </form>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>